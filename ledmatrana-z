int rowPin[8] = {2,3,4,5,6,7,8,9};
int colPin[8] = {10,11,12,13,A0,A1,A2,A3};

// font A-Z (8x8) — mỗi chữ đã căn giữa
const byte fontAZ[26][8] = {
  {0b00011000,0b00100100,0b01000010,0b01000010,0b01111110,0b01000010,0b01000010,0b00000000}, // A
  {0b01111100,0b01000010,0b01000010,0b01111100,0b01000010,0b01000010,0b01111100,0b00000000}, // B
  {0b00111100,0b01000010,0b01000000,0b01000000,0b01000000,0b01000010,0b00111100,0b00000000}, // C
  {0b01111000,0b01000100,0b01000010,0b01000010,0b01000010,0b01000100,0b01111000,0b00000000}, // D
  {0b01111110,0b01000000,0b01000000,0b01111100,0b01000000,0b01000000,0b01111110,0b00000000}, // E
  {0b01111110,0b01000000,0b01000000,0b01111100,0b01000000,0b01000000,0b01000000,0b00000000}, // F
  {0b00111100,0b01000010,0b01000000,0b01001110,0b01000010,0b01000010,0b00111100,0b00000000}, // G
  {0b01000010,0b01000010,0b01000010,0b01111110,0b01000010,0b01000010,0b01000010,0b00000000}, // H
  {0b00111100,0b00011000,0b00011000,0b00011000,0b00011000,0b00011000,0b00111100,0b00000000}, // I
  {0b00011110,0b00000100,0b00000100,0b00000100,0b01000100,0b01000100,0b00111000,0b00000000}, // J
  {0b01000010,0b01000100,0b01001000,0b01110000,0b01001000,0b01000100,0b01000010,0b00000000}, // K
  {0b01000000,0b01000000,0b01000000,0b01000000,0b01000000,0b01000000,0b01111110,0b00000000}, // L
  {0b01000010,0b01100110,0b01111110,0b01011010,0b01000010,0b01000010,0b01000010,0b00000000}, // M
  {0b01000010,0b01100010,0b01110010,0b01011010,0b01001110,0b01000110,0b01000010,0b00000000}, // N
  {0b00111100,0b01000010,0b01000010,0b01000010,0b01000010,0b01000010,0b00111100,0b00000000}, // O
  {0b01111100,0b01000010,0b01000010,0b01111100,0b01000000,0b01000000,0b01000000,0b00000000}, // P
  {0b00111100,0b01000010,0b01000010,0b01000010,0b01001010,0b00111100,0b00000010,0b00000000}, // Q
  {0b01111100,0b01000010,0b01000010,0b01111100,0b01011000,0b01001100,0b01000110,0b00000000}, // R
  {0b00111110,0b01000000,0b01000000,0b00111100,0b00000010,0b00000010,0b01111100,0b00000000}, // S
  {0b01111110,0b00011000,0b00011000,0b00011000,0b00011000,0b00011000,0b00011000,0b00000000}, // T
  {0b01000010,0b01000010,0b01000010,0b01000010,0b01000010,0b01000010,0b00111100,0b00000000}, // U
  {0b01000010,0b01000010,0b01000010,0b00100100,0b00100100,0b00011000,0b00011000,0b00000000}, // V
  {0b01000010,0b01000010,0b01000010,0b01011010,0b01111110,0b01100110,0b01000010,0b00000000}, // W
  {0b01000010,0b00100100,0b00011000,0b00011000,0b00011000,0b00100100,0b01000010,0b00000000}, // X
  {0b01000010,0b00100100,0b00011000,0b00011000,0b00011000,0b00011000,0b00011000,0b00000000}, // Y
  {0b01111110,0b00000100,0b00001000,0b00010000,0b00100000,0b01000000,0b01111110,0b00000000}  // Z
};

void setup(){
  for(int i=0;i<8;i++){ pinMode(rowPin[i],OUTPUT); pinMode(colPin[i],OUTPUT); }
}

// hiển thị 1 khung 8x8 (Row ANODE)
void drawFrame(const byte *frame){
  for(int r=0;r<8;r++){
    for(int i=0;i<8;i++) digitalWrite(rowPin[i],LOW);
    digitalWrite(rowPin[r],HIGH);
    byte row = frame[r];
    for(int c=0;c<8;c++){
      int bit = (row >> (7-c)) & 1;
      digitalWrite(colPin[c], bit ? LOW : HIGH); // bit=1 -> LED sáng (Row ANODE)
    }
    delay(1);
  }
}

void showChar(int idx, unsigned long ms){
  unsigned long t0 = millis();
  while(millis()-t0 < ms) drawFrame(fontAZ[idx]);
}

void loop(){
  const unsigned long hold = 500; // ms mỗi chữ
  for(int i=0;i<26;i++) showChar(i, hold);
}
